<html>
  <head>
    <title>New Movie Form</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('navbar', {links: links}) %>
    <main>
      <form class="newMovieForm" method="POST" action="/movies/new">
        <h2>New Movie</h1>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>
        <label for="category">Category</label>
        <select type="text" id="category" name="category" required>
          <% categories.forEach(category => { %>
            <option value="<%= category.name %>"><%= category.name %></option>
          <% }) %>
        </select>
        <label for="releaseYear">Release Year</label>
        <input class="yearInput" type="number" id="releaseYear" name="releaseYear" required>
        <label for="description">Description</label>
        <input type="text" id="description" name="description" required>
        <label for="imageUrl">Image URL</label>
        <input type="text" id="imageUrl" name="imageUrl">
        <button type="submit">Create</button>
      </form>
    </main>
    <%- include('footer') %>
  </body>
</html>