<html>
  <head>
    <title>Movie Inventory</title>
    <link rel="stylesheet" href="./styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('navbar', {links: links}) %>
    <main>
      <h2>Featured Movies</h2>
      <div class="slider-container">
        <button id="prevBtn" class="slider-btn">❮</button>
        <div class="slider">
          <% movies.forEach((movie) => { %>
            <div class="slide">
              <a href="/movies/<%= movie.movie_id %>">
                <img src="<%= movie.imageurl %>" alt="<%= movie.title %>">
              </a>
              <h4><%= movie.title %></h4>
            </div>          
          <% }); %>
        </div>
        <button id="nextBtn" class="slider-btn">❯</button>
      </div>
      <h2>Featured Categories</h2>
      <ul class="categoriesBoard">
        <% categories.forEach((category) => { %>
          <%- include('categoryCard', {category: category}); %>
        <% }); %>
        </li>
      </ul> 
    </main>    
    <%- include('footer') %>
    <script src="./script.js"></script>
  </body>
</html>