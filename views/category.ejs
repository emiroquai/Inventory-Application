<html>
  <head>
    <title>Category</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('navbar', {links: links}) %>
    <main>
      <div class="catTitle">
        <h2><%= title %></h2>
        <form id="deleteCategoryForm" action="./<%= category_name %>/delete" method="POST">
          <input type="hidden" id="category_name" name="category_name" value="<%= category_name %>">
          <button class="btn delete" type="submit">Delete Category</button>
      </div>
      </form>        
      <ul class="moviesBoard">
        <% category.forEach((movie) => { %>
          <%- include('movieCard', {movie: movie}); %>
        <% }); %>
        <li class="movieCard">
          <a href="/movies/new %>"><h4>+ New Movie</h4></a>
        </li>
      </ul>
    </main>
    <%- include('footer') %>
  </body>
</html>