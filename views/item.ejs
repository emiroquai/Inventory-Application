<html>
  <head>
    <title>Item</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('navbar', {links: links}) %>
    <main>
      <div class="itemView">
        <img class="itemViewImg" src="<%= item.imageurl %>" alt="<%= item.title %>">
        <div class="itemInfo">
          <h2><%= item.title %> (<%= item.release_year %>)</h2>
          <h3><%= item.category %></h3>
          <p class="info"><%= item.description %></p>
          <form id="deleteMovieForm" action="./<%= item.movie_id %>/delete" method="POST">
            <input type="hidden" id="itemId" name="itemId" value="<%= item.movie_id %>">
            <button class="btn delete" type="submit">Delete Movie</button>
          </form>        
        </div>
      </div>
    </main>
    <%- include('footer') %>
  </body>
</html>